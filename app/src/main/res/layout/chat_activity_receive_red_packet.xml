<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatTransparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="380dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/chat_icon_red_packet_pop_back"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/red_packet_num"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/red_packet_num"
                android:text="¥"
                android:textColor="@color/chatRedPacketNumTextColor"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/red_packet_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="199.99"
                android:textColor="@color/chatRedPacketNumTextColor"
                android:textSize="40dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/red_packet_num"
                android:layout_toRightOf="@+id/red_packet_num"
                android:text="元"
                android:textColor="@color/chatRedPacketNumTextColor"
                android:textSize="22dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="62dp"
            android:gravity="center"
            android:text="恭喜发财"
            android:textColor="@color/chatRedPacketSendWord"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="您领取了樊述炜的红包"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </RelativeLayout>
</FrameLayout>