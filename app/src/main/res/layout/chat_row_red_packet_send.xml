<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_time"
        style="@style/MessageDateTimeStyle"
        android:text="2017-03-27 14:59:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_avatar"
        android:layout_marginRight="5dp"
        android:gravity="right">

        <com.fsw.chat_ui.widget.SendMessageTip
            android:layout_width="@dimen/chat_row_tip_width"
            android:layout_height="@dimen/chat_row_tip_width"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/chat_row_tip_width"
            android:layout_height="@dimen/chat_row_tip_width"
            android:layout_gravity="center_vertical"
            android:background="@drawable/chat_icon_fail_tip"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:layout_below="@+id/user_name"
            android:layout_toRightOf="@+id/user_avatar"
            android:background="@drawable/chat_bubble_red_packet"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/open_red_packet"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/chat_icon_open_red_packet_btn_back"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="恭喜发财"
                android:textColor="@color/chatRedPacketSendWord"
                android:textSize="17sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="等待对方领取"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/user_avatar"
            style="@style/ChatAvatarStyleSend"
            android:src="@drawable/icon_logo" />
    </LinearLayout>
</LinearLayout>