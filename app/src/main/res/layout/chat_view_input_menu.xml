<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/chatInputMenuBack"
              android:orientation="horizontal"
              android:paddingBottom="7dp"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:paddingTop="7dp">

    <LinearLayout
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_input_round_view_back"
        android:gravity="center"
        android:minHeight="@dimen/input_menu_input_view_height"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/open_operate_menu"
            android:layout_width="@dimen/input_menu_input_button_height"
            android:layout_height="@dimen/input_menu_input_button_height"
            android:padding="3dp"
            android:src="@drawable/chat_input_menu_open_more_normal"/>

        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="3"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textColor="@color/chatInputTextColor"
            android:textSize="16sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/voice_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="按住这里开始说话"
            android:textColor="@color/chatInputTextColor"
            android:textSize="16sp"
            android:textStyle="italic"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="@dimen/input_menu_input_button_height"
            android:layout_height="@dimen/input_menu_input_button_height"
            android:background="@drawable/chat_send_btn_back"
            android:padding="3dp"
            android:src="@drawable/chat_send_btn_src"/>
    </LinearLayout>
</LinearLayout>